# Database - Supabase
# Use a connection string do Supabase (Transaction Pooler para serverless)
DATABASE_URL="postgresql://postgres.[project-ref]:[password]@aws-0-sa-east-1.pooler.supabase.com:6543/postgres?pgbouncer=true"

# Direct connection (para migrations apenas)
DIRECT_URL="postgresql://postgres.[project-ref]:[password]@aws-0-sa-east-1.pooler.supabase.com:5432/postgres"

# JWT
JWT_SECRET="your-super-secret-jwt-key-change-in-production"
JWT_EXPIRES_IN="15m"
JWT_REFRESH_EXPIRES_IN="7d"

# Server
PORT=3001
NODE_ENV=development

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Admin Setup (use only for initial setup)
ADMIN_USERNAME="admin"
ADMIN_EMAIL="admin@gouauth.com"
ADMIN_PASSWORD="admin123"

# CORS - Frontend URL (Vercel)
CORS_ORIGIN="https://your-app.vercel.app"
